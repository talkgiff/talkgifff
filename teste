    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            position: relative;
            overflow: hidden;
        }
        /* Centralizar imagens */
        .imagem-container {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }
        img {
            width: 80%;
            max-width: 500px;
            margin: 10px;
        }
        .botao-container {
            margin-top: 30px;
            display: flex;
            justify-content: center;
            gap: 15px;
        }
        .botao {
            background-color: red;
            color: white;
            font-size: 18px; /* Bot√µes menores */
            padding: 10px 20px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            box-shadow: 0 4px #999;
            transition: all 0.3s ease;
        }
        .botao:active {
            box-shadow: 0 2px #666;
            transform: translateY(4px);
        }
        .botao.piscando-verde {
            background-color: green;
            animation: piscarVerde 1s infinite;
        }
        .botao.piscando-vermelho {
            background-color: red;
            animation: piscarVermelho 1s infinite;
        }
        .mensagem {
            font-size: 24px;
            font-weight: bold;
            margin-top: 20px;
            display: none;
            padding: 20px;
            border-radius: 10px;
            background-color: #f0f0f0;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transform: perspective(500px) rotateX(10deg);
        }
        .mensagem.correta {
            color: green;
            background-color: #e1ffe1;
        }
        .mensagem.errada {
            color: red;
            background-color: #ffe1e1;
        }
        /* Efeito de moedas subindo no centro da tela e grande */
        .moeda {
            position: absolute;
            font-size: 100px; /* Tamanho maior da moeda */
            color: gold;
            animation: subirMoeda 2s ease-out;
        }

        @keyframes subirMoeda {
            0% {
                transform: translate(-50%, 0);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -200px); /* Moeda sobe mais alto */
                opacity: 0;
            }
        }

        /* Efeito de v√°rias moedas subindo de forma coordenada */
        .moeda.multipla {
            animation: subirMoeda 5s ease-out;
        }

        /* Estilo para a placa 3D da mensagem de sucesso */
        .mensagem.correta {
